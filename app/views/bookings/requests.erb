<div class="container">
  <div class="col-md-12 text-center">
    <h1>Your booking requests</h1>
  </div>
</div>

<div class="container">
  <div class="col-md-2">
  </div>
  <div class="col-md-8 text-center">
    <% @spaces.each do |space| %>
      <div class="booking">
      <%= space.description %><br>
      <% space.bookings.each do |booking| %>
        <div class="dates">
          <%= booking.start_date.strftime("%d/%m/%Y") %> -
          <%= booking.end_date.strftime("%d/%m/%Y") %>
        </div>
        <% unless booking.approval %>
          <form class="confirm_booking" action="/bookings/requests/<%= booking.id %>" method="post">
            <input id="<%= booking.id %>" type="submit" value="Confirm Booking"/>
          </form>
        <% end %>
      <% end %>
      </div>
    <% end %>
  </div>
  <div class="col-md-2">
  </div>
</div>
