<div class="container">
  <div class="col-md-12 text-center">
    <h1>Book a Space</h1>
  </div>
</div>

<div class="container">
  <div class="col-md-2">
  </div>
  <div class="col-md-8 text-center">
    <p><%= @space.description %></p>


    <form class="form-inline" action="/bookings" method="post">
      <div class="form-group">
        <label for="start_date">Check In:
          <input type="text" name="start_date" placeholder="DD/MM/YYYY">
        </label>
      </div>
      <div class="form-group">
        <label for="end_date">Check Out:
          <input type="text" name="end_date" placeholder="DD/MM/YYYY">
        </label>
      </div>
      <input type="submit" name="submit" value="Book">
    </form>
  </div>
  <div class="col-md-2">
  </div>
</div>
